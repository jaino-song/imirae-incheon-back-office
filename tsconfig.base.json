{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@shared-types": ["libs/shared-types/src/index"],
      "@shared-types/*": ["libs/shared-types/src/*"],
      "@api/core/*": ["apps/api/src/core/*"],
      "@api/infrastructure/*": ["apps/api/src/infrastructure/*"],
      "@api/presentation/*": ["apps/api/src/presentation/*"]
    }
  }
}
